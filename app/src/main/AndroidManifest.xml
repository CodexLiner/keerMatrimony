<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="keer.matrimony">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KeerMatrimony">
        <activity
            android:theme="@style/Theme.CustomeTheme"
            android:name=".ui.Activitys.SearchResult"
            android:exported="false" />
        <activity
            android:name=".ui.Activitys.splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Activitys.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.CustomeTheme" />
        <activity
            android:name=".ui.Activitys.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.Activitys.MainActivity"
            android:exported="true" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
    </application>

</manifest>