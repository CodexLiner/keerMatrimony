<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="15dp"
    android:maxHeight="400dp"
    android:layout_marginBottom="5dp"
    android:layout_height="380dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp"
            android:scaleType="fitXY" />
        <LinearLayout
            android:visibility="invisible"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/ignore"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/button_shape_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ignore"
                    android:textColor="@color/white"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    app:drawableStartCompat="@drawable/ic_cross" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/allPhotos"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/button_shape_dark"
                    android:gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/white"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    app:drawableStartCompat="@drawable/ic_baseline_photo_library_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonPanel"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
            <TextView
                android:id="@+id/sName"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meghna Mishra"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/sJob"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Software Engineer, Indore"
                android:textColor="@color/white"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/sAge"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27yrs, 5.4/ 163 cm"
                android:textColor="@color/white"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/sCity"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maratha, Patil | Mumbai, India"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/callButton"
                android:gravity="start|center"
                android:textSize="11sp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1.2"
                android:background="@drawable/button_shape_radius"
                android:drawableStart="@drawable/ic_call"
                android:text="call now" />

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="invisible"
                android:id="@+id/intrestButton"
                android:gravity="start|center"
                android:textSize="11sp"
                android:drawablePadding="8dp"
                android:drawableTint="#D50000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_shape_radius"
                android:drawableStart="@drawable/ic_heart"
                android:text="Send Interest" />

            <ImageButton
                android:visibility="invisible"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:elevation="5dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/favButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/oval_shape"
                android:drawableTint="@color/black"
                android:src="@drawable/ic_star"
                app:tint="#FFAB00" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>