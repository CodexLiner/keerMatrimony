<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIFragments.onBoarding.ReligiuosInformation">

    <LinearLayout
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <EditText
                android:background="@drawable/button_shape_secondary"
                android:paddingStart="10dp"
                android:hint="GOTRA"
                android:id="@+id/gotra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <Spinner
                android:id="@+id/motherTongue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <TextView
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textSize="18sp"
                android:id="@+id/birthDate"
                android:text="Birth Time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <EditText
                android:paddingStart="10dp"
                android:hint="Place Of Birth"
                android:background="@drawable/button_shape_secondary"
                android:id="@+id/birthPlace"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <Spinner
                android:id="@+id/zodiac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <Spinner
                android:id="@+id/manglik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button_shape_secondary"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="50dp">
            <Spinner
                android:id="@+id/nakshatra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextButton"
                android:background="@drawable/button_shape"
                android:text="Next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>